<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFBE7"
    android:orientation="vertical"
    tools:context=".SeatSelection">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Your Payment"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="#DAE5D0"
        android:padding="5dp"
        android:textSize="34dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:padding="50dp"
        app:srcCompat="@drawable/ticket"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:text="Price: Tk 400/ Seat "
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:text="Enter Seats"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Seats Like this A1, A2, A3"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#6F6E6E"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btncardpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to Payment"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:backgroundTint="#B4E197" />
</LinearLayout>
