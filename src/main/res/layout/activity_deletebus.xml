<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".deletetrain">
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delete Train"
        android:background="#DAE5D0"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:padding="5dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView12"
            android:layout_gravity="center"
            android:layout_width="286dp"
            android:layout_height="244dp"
            app:srcCompat="@drawable/deletebus" />
        <EditText
            android:id="@+id/trainid"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:layout_margin="00dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:textSize="20dp"
            android:backgroundTint="#B4E197"/>
        <Button
            android:id="@+id/deletetrain"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Train"
            android:textSize="20dp"
            android:backgroundTint="#FF6363"/>
    </LinearLayout>
</LinearLayout>